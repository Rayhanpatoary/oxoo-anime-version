<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#e8e8e8"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/progressBar"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ProgressBar
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>



    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipe_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.core.widget.NestedScrollView

                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/imageview"
                            android:scaleType="fitXY"
                            android:layout_width="match_parent"
                            android:layout_height="200dp" />

                        <ImageView
                            android:id="@+id/imageview_thumb"
                            android:layout_marginTop="50dp"
                            android:layout_marginEnd="30dp"
                            android:layout_alignParentEnd="true"
                            android:layout_width="116dp"
                            android:layout_height="172dp" />

                        <TextView
                            android:id="@+id/text_name"
                            android:paddingStart="10dp"
                            android:paddingEnd="10dp"
                            android:textColor="@color/white"
                            android:paddingBottom="40dp"
                            android:layout_toStartOf="@+id/imageview_thumb"
                            android:layout_alignParentBottom="true"
                            android:textAppearance="@style/TextAppearance.Title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

                    </RelativeLayout>


                    <LinearLayout
                        android:id="@+id/llbottomparent"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:id="@+id/llbottom"
                            android:padding="10dp"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/tv_details"
                                android:textAppearance="@style/TextAppearance.Small"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />

                            <RelativeLayout
                            android:layout_marginTop="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                            android:id="@+id/genre"
                            android:textColor="@color/black"
                            android:textAppearance="@style/TextAppearance.Medium.Bold"
                            android:text="@string/genre"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                            <TextView
                            android:id="@+id/tv_genre"
                            android:textAppearance="@style/TextAppearance.Medium.Bold"
                            android:layout_marginLeft="10dp"
                            android:layout_toRightOf="@id/genre"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toEndOf="@id/genre"
                            android:layout_marginStart="10dp" />
                            <!--<androidx.recyclerview.widget.RecyclerView-->
                            <!--android:visibility="gone"-->
                            <!--android:layout_toRightOf="@id/director"-->
                            <!--android:layout_width="match_parent"-->
                            <!--android:layout_height="wrap_content"-->
                            <!--android:layout_toEndOf="@id/director">-->

                            <!--</androidx.recyclerview.widget.RecyclerView>-->

                            </RelativeLayout>

                            <!--<LinearLayout-->
                                <!--android:layout_marginTop="5dp"-->
                                <!--android:orientation="vertical"-->
                                <!--android:layout_width="match_parent"-->
                                <!--android:layout_height="wrap_content">-->

                                <!--<TextView-->
                                    <!--android:textColor="@color/black"-->
                                    <!--android:text="@string/genre"-->
                                    <!--android:textAppearance="@style/TextAppearance.Medium.Bold"-->
                                    <!--android:layout_width="match_parent"-->
                                    <!--android:layout_height="wrap_content" />-->
                                <!--<TextView-->
                                    <!--android:id="@+id/tv_genre"-->
                                    <!--android:textAppearance="@style/TextAppearance.Small"-->
                                    <!--android:layout_width="match_parent"-->
                                    <!--android:layout_height="wrap_content" />-->


                            <!--</LinearLayout>-->
                            <RelativeLayout
                                android:layout_marginTop="5dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:id="@+id/director"
                                    android:textColor="@color/black"
                                    android:textAppearance="@style/TextAppearance.Medium.Bold"
                                    android:text="@string/director"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />

                                <TextView
                                    android:id="@+id/tv_director"
                                    android:textAppearance="@style/TextAppearance.Medium.Bold"
                                    android:layout_marginLeft="10dp"
                                    android:layout_toRightOf="@id/director"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_toEndOf="@id/director"
                                    android:layout_marginStart="10dp" />
                            </RelativeLayout>

                            <LinearLayout
                                android:layout_marginTop="5dp"
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:id="@+id/cast"
                                    android:textColor="@color/black"
                                    android:text="@string/cast_n_crew"
                                    android:textAppearance="@style/TextAppearance.Medium.Bold"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />
                                <TextView
                                    android:id="@+id/tv_cast"
                                    android:layout_marginStart="10dp"
                                    android:textAppearance="@style/TextAppearance.Small"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content" />
                            </LinearLayout>

                            <RelativeLayout
                                android:layout_marginTop="8dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:id="@+id/aired"
                                    android:textColor="@color/black"
                                    android:textAppearance="@style/TextAppearance.Medium.Bold"
                                    android:text="Aired"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />

                                <TextView
                                    android:id="@+id/tv_release_date"
                                    android:textAppearance="@style/TextAppearance.Medium.Bold"
                                    android:layout_marginLeft="10dp"
                                    android:layout_toRightOf="@id/aired"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_toEndOf="@id/aired"
                                    android:layout_marginStart="10dp" />

                            </RelativeLayout>


                        </LinearLayout>
                        <View
                            android:layout_marginTop="5dp"
                            android:background="@color/grey_20"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"/>
                        <!--<LinearLayout-->
                            <!--android:padding="10dp"-->
                            <!--android:layout_marginTop="5dp"-->
                            <!--android:orientation="vertical"-->
                            <!--android:layout_width="match_parent"-->
                            <!--android:layout_height="wrap_content">-->

                            <!--<TextView-->
                                <!--android:textColor="@color/black"-->
                                <!--android:text="@string/description"-->
                                <!--android:textAppearance="@style/TextAppearance.Medium.Bold"-->
                                <!--android:layout_width="match_parent"-->
                                <!--android:layout_height="wrap_content" />-->
                            <!--<TextView-->
                                <!--android:id="@+id/tv_details"-->
                                <!--android:textAppearance="@style/TextAppearance.Small"-->
                                <!--android:layout_width="match_parent"-->
                                <!--android:layout_height="wrap_content" />-->

                        <!--</LinearLayout>-->


                    </LinearLayout>

                    <View
                        android:background="@color/grey_400"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"/>

                    <LinearLayout
                        android:id="@+id/ll_watch_later"
                        android:layout_margin="10dp"
                        android:padding="5dp"
                        android:background="@color/white"
                        android:layout_marginTop="20dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/img_watch_later"
                            app:srcCompat="@drawable/ic_history"
                            android:layout_width="30dp"
                            android:layout_height="30dp" />
                        <TextView
                            android:textColor="@color/black"
                            android:paddingStart="10dp"
                            android:layout_gravity="center"
                            android:text="Watch Later"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/ll_watched"
                        android:padding="5dp"
                        android:layout_margin="10dp"
                        android:background="@color/white"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/img_watched"
                            app:srcCompat="@drawable/ic_done_black"
                            android:layout_width="30dp"
                            android:layout_height="30dp" />
                        <TextView
                            android:textColor="@color/black"
                            android:paddingStart="10dp"
                            android:layout_gravity="center"
                            android:text="Watched"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/ll_fav"
                        android:padding="5dp"
                        android:background="@color/white"
                        android:layout_margin="10dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/image_fav"
                            app:srcCompat="@drawable/outline_favorite_border_24"
                            android:layout_width="30dp"
                            android:layout_height="30dp" />
                        <TextView
                            android:textColor="@color/black"
                            android:paddingStart="10dp"
                            android:layout_gravity="center"
                            android:text="Add to Favorite"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                    </LinearLayout>




                </LinearLayout>

            </androidx.core.widget.NestedScrollView>



        </ScrollView>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>


</LinearLayout>